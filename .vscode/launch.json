{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch server (WSL)",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/server",
      "cwd": "${workspaceFolder}",
      "env": {
        // put your env here if needed
        // "PORT": "50051"
      },
      "args": [],
      "preLaunchTask": "make proto"
    },
    {
      "name": "Debug current test file",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${fileDirname}",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Attach to running Go (dlv-dap)",
      "type": "go",
      "request": "attach",
      "processId": 0
    }
  ]
}
